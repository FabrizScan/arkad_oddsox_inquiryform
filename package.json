{
  "name": "oddsox-leads-form",
  "version": "2.0.0",
  "description": "OddSox Leads Form with separated frontend/backend architecture",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "preview": "cd frontend && npm run preview",
    "deploy:frontend": "cd frontend && npm run build",
    "deploy:backend": "cd backend && npm run deploy",
    "deploy:backend:staging": "cd backend && npm run deploy:staging",
    "deploy:backend:production": "cd backend && npm run deploy:production",
    "deploy:cloudflare": "npm run deploy:backend:production && cd frontend && npm run build",
    "deploy:vercel": "npm run deploy:backend:production && npm run build:frontend",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "keywords": [
    "oddsox",
    "leads",
    "form",
    "react",
    "cloudflare",
    "workers"
  ],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "frontend",
    "backend"
  ]
}
